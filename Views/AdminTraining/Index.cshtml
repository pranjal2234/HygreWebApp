@model IEnumerable<HygreWebApp.Models.TrainingWeek>

@{
    ViewData["Title"] = "Admin | Training Bookings";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div class="container py-5">
    <h2 class="mb-4">Training Bookings (Admin)</h2>

    @foreach (var week in Model)
    {
        var bookedCount = week.Bookings.Count;
        var available = week.MaxSeats - bookedCount;

        <div class="card mb-4 shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <strong>
                    Week Starting: @week.WeekStartDate.ToString("dd MMM yyyy")
                </strong>

                <span class="badge @(available == 0 ? "bg-danger" : "bg-success")">
                    @bookedCount / @week.MaxSeats Booked
                </span>
            </div>

            <div class="card-body">
                @if (week.Bookings.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Student Name</th>
                                    <th>Email</th>
                                    <th>Booked On</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                }
                                @foreach (var booking in week.Bookings)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@booking.StudentName</td>
                                        <td>@booking.Email</td>
                                        <td>@booking.BookedOn.ToString("dd MMM yyyy hh:mm tt")</td>
                                        <td>
                                            <form asp-action="CancelBooking"
                                                  method="post"
                                                  onsubmit="return confirm('Are you sure you want to cancel this booking?');">

                                                <input type="hidden" name="bookingId" value="@booking.Id" />

                                                <button class="btn btn-sm btn-danger">
                                                    Cancel
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">No bookings for this week yet.</p>
                }
            </div>
        </div>
    }
</div>
